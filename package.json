{
    "name": "silk-wasm",
    "description": "Tencent silk encoder for Node.js and browser",
    "version": "2.0.2",
    "main": "lib/index.cjs",
    "module": "lib/index.mjs",
    "typings": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idanran/silk-wasm.git"
    },
    "author": "idanran <idanran@outlook.com>",
    "license": "MIT",
    "files": [
        "lib"
    ],
    "scripts": {
        "compile:cjs": "esbuild src/index.ts --outfile=lib/index.cjs --bundle --platform=node --target=es2022 --inject:./import-meta-url.js --define:import.meta.url=import_meta_url",
        "compile:esm": "esbuild src/index.ts --outfile=lib/index.mjs --bundle --platform=node --target=es2022 --format=esm",
        "build": "yarn compile:cjs && yarn compile:esm && tsc"
    },
    "keywords": [
        "silk",
        "tencent",
        "encoder",
        "silk-sdk",
        "wasm",
        "decoder",
        "codec"
    ],
    "devDependencies": {
        "@types/node": "^20.8.9",
        "esbuild": "^0.19.5",
        "typescript": "^5.2.2"
    }
}
